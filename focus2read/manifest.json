{
  "name": "focus2read",
 
 "version": "0.2",

  "description": "focus on text to read better",

  "homepage_url": "http://focus2read.com/",
  
	"permissions": [
	  "tabs", "http://*/*", "https://*/*"
	],
	"web_accessible_resources": [
    "images/settings_icon1.png"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["resources/jquery-1.8.3.js","resources/jquery-ui.js","injec_script_noInstantFire.js","content_script.js"],
	  "css":["resources/jquery-ui.css","resources/sliders_style.css"]
    }
  ],
 "browser_action": {
    "default_icon": "icon.png", 
    "default_title": "open new tab",      
    "default_popup": "popup.html"       
  },
  "manifest_version": 2
  
}


			